    #region  Razor modal dialog examplo -------------
    void DeleteNote(NoteInfoDto note)
    {
        noteForDelete = note;
        confirm.Show();
    }

    void DeleteNoteConfirm()
    {
        Notes.Remove(noteForDelete);
        noteForDelete = null;
        confirm.Hide();
    }

    void DeleteNoteCancel()
    {
        confirm.Hide();
        noteForDelete = null;
    }
    #endregion --------------------------------------

}