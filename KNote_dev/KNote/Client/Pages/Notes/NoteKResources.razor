<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            &nbsp;
        </div>
        <div class="col-6 float-right">
            <button class="btn btn-sm btn-warning mx-1 float-right"
                    @onclick="@(() => OnNewResource.InvokeAsync(null))"
                    data-toggle="tooltip" title="New resource for this note">
                    Upload new resource
            </button>
        </div>
    </div>
</div>
<hr class="mt-0" />

<EntityList List="Resources">
    <ItemsFull>
        <table class="table table-sm table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Order</th>
                    <th width="100px" class="text-center">(Actions)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Resources)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Order</td>
                        <td>
                            <span class="float-right">
                                <button class="btn btn-sm btn-info mx-1"
                                        @onclick="@(() => OnInsertInDesription.InvokeAsync(item))"
                                        data-toggle="tooltip" title="Insert in description">
                                    <i class="fa fa-clipboard"></i>
                                </button>
                                <button class="btn btn-sm btn-danger mx-1"
                                        @onclick="@(() => OnDelete.InvokeAsync(item))"
                                        data-toggle="tooltip" title="Delete resource">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </ItemsFull>
</EntityList>

@code {
    [Parameter] public List<ResourceDto> Resources { get; set; }
    [Parameter] public EventCallback<ResourceDto> OnDelete { get; set; }
    [Parameter] public EventCallback<ResourceDto> OnInsertInDesription { get; set; }
    [Parameter] public EventCallback OnNewResource { get; set; }   
}