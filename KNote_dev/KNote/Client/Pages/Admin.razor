@page "/admin"

@inject NavigationManager navigationManager

@attribute [Authorize(Roles = "Admin")]

<h3>Admin</h3>

<hr />

<span class="float-left">
    <button class="btn btn-sm btn-warning mx-1"
            @onclick="GoFoldersAdmin"
            data-toggle="tooltip" title="Folders managment">
        <i class="oi oi-folder"></i> Folders
    </button>
    <button class="btn btn-sm btn-warning mx-1"
            @onclick="GoTypesAdmin"
            data-toggle="tooltip" title="Types managment">
        <i class="oi oi-tablet"></i> Types
    </button>
    <button class="btn btn-sm btn-warning mx-1"
            @onclick="GoAttributesAdmin"
            data-toggle="tooltip" title="Attributes managment">
        <i class="oi oi-bookmark"></i> Attributes
    </button>
    <button class="btn btn-sm btn-warning mx-1"
            @onclick="GoUsersAdmin"
            data-toggle="tooltip" title="Users managment">
        <i class="oi oi-person"></i> Users
    </button>
</span>


@code {

    void GoFoldersAdmin()
    {
        navigationManager.NavigateTo($"folders");
    }

    void GoAttributesAdmin()
    {
        navigationManager.NavigateTo($"attributes");
    }

    void GoTypesAdmin()
    {
        navigationManager.NavigateTo($"types");
    }

    void GoUsersAdmin()
    {
        navigationManager.NavigateTo($"users");
    }

}
