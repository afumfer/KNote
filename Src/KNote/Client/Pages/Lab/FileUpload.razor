@page "/fileupload"

@inject IJSRuntime JSRuntime;
@inject DialogService dialogService

@implements IAsyncDisposable

<h3>File Upload</h3>

<div @ref="fileDropContainer" class="@HoverClass" @ondragenter="OnDragEnter" @ondragleave="OnDragLeave" @ondragover="OnDragEnter" style="align-items: center;width: 100%;
        border: 2px dotted #fb275d;
        display: flex;
        align-items: center;
        margin-bottom: 2px;
        min-height: 60px;">
    <div>
        <InputFile OnChange="@OnChange" @ref="inputFile" multiple style="" />
    </div>
    <p>...</p>
</div>

