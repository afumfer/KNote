<div class="container-fluid">
    <div class="row mb-2" >
        <div class="col-6">            
        </div>
        <div class="col-6 float-right">
            <button class="btn btn-sm btn-warning mx-1 float-right"
                    @onclick="@(() => OnNew.InvokeAsync(null))"
                    data-toggle="tooltip" title="New resource for this note">
                    Upload new resource
            </button>
        </div>
    </div>
</div>

<EntityList List="Resources">
    <ItemsFull>
        <table class="table table-sm table-bordered table-striped">
            <thead>
                <tr>
                    <th width="240px">Resource name</th>
                    <th>Description</th>
                    <th width="120px" class="text-center">Content</th>
                    <th width="40px" class="text-center">Order</th>
                    <th width="100px" class="text-center">(Actions)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Resources)
                {
                <tr>
                    <td>
                        <a href="@item.RelativeUrl" target="_blank">
                            @item.NameOut
                        </a>
                    </td>
                    <td>@item.Description</td>
                    <td>                        
                        <a href="@item.FullUrl" target="_blank" rel="noopener noreferrer">
                            <center>
                                <img style="width: @(ImgWidth(item))px" src="@ImgPreview(item)" />
                            </center>
                        </a>
                    </td>
                    <td>
                        <center>@item.Order</center>                        
                    </td>
                    <td>
                        <span class="float-right">
                            <button class="btn btn-sm btn-info mx-1"
                                    @onclick="@(() => OnInsertInDesription.InvokeAsync(item))"
                                    data-toggle="tooltip" title="Insert in description">
                                <i class="fa fa-clipboard"></i>
                            </button>
                            <button class="btn btn-sm btn-danger mx-1"
                                    @onclick="@(() => OnDelete.InvokeAsync(item))"
                                    data-toggle="tooltip" title="Delete resource">
                                <i class="fa fa-minus"></i>
                            </button>
                        </span>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </ItemsFull>
</EntityList>

@code {
    [Parameter] public List<ResourceInfoDto> Resources { get; set; }
    [Parameter] public EventCallback<ResourceInfoDto> OnDelete { get; set; }
    [Parameter] public EventCallback<ResourceInfoDto> OnInsertInDesription { get; set; }
    [Parameter] public EventCallback OnNew { get; set; }

    private string ImgPreview(ResourceInfoDto resource)
    {
        var imgSrc = "";
        if (resource.FileType == "image/jpeg")
            imgSrc = "data:image/jpeg;base64, " + resource.ContentBase64;
        else if (resource.FileType == "application/pdf")
            imgSrc = @"https://upload.wikimedia.org/wikipedia/commons/8/87/PDF_file_icon.svg";
        else
            imgSrc = @"https://img.icons8.com/ios/50/000000/document-1.png";

        return imgSrc;
    }

    private int ImgWidth(ResourceInfoDto resource)
    {
        var imgW = 50;
        if (resource.FileType == "image/jpeg")
            imgW = 100;

        return imgW;
    }

}